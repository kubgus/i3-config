include $HOME/.config/i3/remap.conf
include $HOME/.config/i3/workspaces.conf

set $mod Mod1
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

set $pm = eDP
set $sm = HDMI-1-1

font pango:DejaVu Sans Mono 11

# second display
exec --no-startup-id xrandr --auto
exec --no-startup-id xrandr --output eDP --primary --output HDMI-1-1 --right-of eDP

exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
exec --no-startup-id xss-lock --transfer-sleep-lock --i3lock --nofork

exec --no-startup-id nm-applet

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
}

exec_always --no-startup-id /usr/bin/feh --bg-scale '/usr/share/backgrounds/kali/kali-moto-16x9.png'
exec --no-startup-id compton
